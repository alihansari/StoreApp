@model ProductDtoForUpdate
<div class="text-center">
    <div class="display-6">Update</div>
</div>

@* <div class="text-danger" asp-validation-summary="All"></div> *@
<form method="post" asp-action="Update" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id">
    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories"></select>
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control">
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control">
        <span asp-validation-for="Summary" class="text-danger"></span>
    </div>
    <div class ="form-group my-3">
        <img class="rounded shadow" width="150" src="@Model?.ImageUrl"/>
    </div>
    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input type = "file" name="file" class="form-control">
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group my-3">
        <div class="button-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Update
            </button>
            <a asp-action="Index" class="btn btn-outline-primary mx-3">
                <i class="fa fa-list"></i>
                Products
            </a>
        </div>
    </div>
</form>