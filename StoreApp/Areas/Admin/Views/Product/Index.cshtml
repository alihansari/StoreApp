@model IEnumerable<Product>

<div class="text-center">
    <div class="display-6 my-3">Products</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success " asp-action="Create">
            <i class="fa fa-plus"></i>
            Create
        </a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image Url</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product prd in Model)
            {
                <tr>
                    <td>@prd.Id</td>
                    <td>
                        <img class="border border-light rounded" src="@prd?.ImageUrl" alt="@prd.ProductName" width="50" />
                    </td>
                    <td>@prd.ProductName</td>
                    <td>@prd.Price.ToString("c")</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-warning mx-2" asp-action="Update" asp-route-id="@prd.Id">
                                <i class="fa fa-edit"></i>
                                Edit
                            </a>
                            <a class="btn btn-danger mx-2" asp-action="Delete"
                                asp-route-id="@prd.Id">
                                <i class="fa fa-trash"></i>
                                Delete
                            </a>
                            <a class="btn btn-primary mx-2" target="_blank" asp-area="" asp-controller="Product" asp-action="Get"
                                asp-route-id="@prd.Id">
                                <i class="fa fa-search"></i>
                                Preview
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
