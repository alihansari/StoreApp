@model IEnumerable<Category>

<div class="mt-3">
    <h6 class="lead">
        <i class="fa fa-solid fa-bars text-secondary"></i>
        Categories
    </h6>
</div>

@if (Model.Count() > 0)
{
    <div class="my-4 list-group">
        @foreach (var cat in Model)
        {
            <a class="list-group-item list-group-item-action" asp-action="Index" asp-route-categoryId="@cat.Id">@cat.Name</a>
        }
    </div>
}
else
{
    <div>
        <p>Category is Not Found</p>
    </div>
}
