@model Product

<div class="col-sm-12 col-md-4 my-2 text-center">
    <div class="card" style="width: 18rem;">
        <img src="@Model?.ImageUrl" class="card-img-top img-fluid mx-auto" style="height: 250px;" alt="@Model?.ProductName">
        <div class="card-body">
            <h5 class="card-title">@Model?.ProductName</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
                content.</p>
            <div class="btn btn-group">
                <a asp-action="Get" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fa-solid fa-arrow-right"></i>
                    Details
                </a>
                <form id="@Model.Id" asp-page="/cart" method="post">
                    <input type="hidden" asp-for="Id" name="ProductId" />
                    <input type="hidden" name="returnUrl" value="/Product/Get/@Model.Id">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fa fa-cart-plus"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
